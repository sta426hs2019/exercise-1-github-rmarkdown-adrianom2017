library(ggplot2)
library(gridExtra)
set.seed(42)
data = data.frame(x = rlnorm(100, 1, .25))
plt1 = ggplot(data, aes(x=x)) + geom_histogram()
plt2 = ggplot(data, aes(x=x)) + geom_histogram() + scale_x_log10()
grid.arrange(plt1,plt2, nrow = 1)
plt2 = ggplot(log(data), aes(x=x)) + geom_histogram()
grid.arrange(plt1,plt2, nrow = 1)
plt1 = ggplot(data, aes(x=x)) + geom_histogram() + ggtitle('Histogram of sample points on normal scale')
plt2 = ggplot(log(data), aes(x=x)) + geom_histogram() + ggtitle('Histogram of sample points on log scale')
grid.arrange(plt1,plt2, nrow = 1)
plt1 = ggplot(data, aes(x=x)) + geom_histogram() + ggtitle('Histogram of sample points\n on normal scale')
plt2 = ggplot(log(data), aes(x=x)) + geom_histogram() + ggtitle('Histogram of sample points\n on log scale')
grid.arrange(plt1,plt2, nrow = 1)
plt1 = ggplot(data, aes(x=x)) + geom_histogram() + labs('Histogram of sample points') +
plt2 = ggplot(log(data), aes(x=x)) + geom_histogram() + ggtitle('Histogram of sample points')
plt1 = ggplot(data, aes(x=x)) + geom_histogram() + labs(title ='Histogram of sample points') +
plt2 = ggplot(log(data), aes(x=x)) + geom_histogram() + ggtitle('Histogram of sample points')
plt1 = ggplot(data, aes(x=x)) + geom_histogram() + labs(title ='Histogram of sample points')
plt2 = ggplot(log(data), aes(x=x)) + geom_histogram() + ggtitle('Histogram of sample points')
grid.arrange(plt1,plt2, nrow = 1)
plt1 = ggplot(data, aes(x=x)) + geom_histogram() + labs(title ='Histogram of sample points', subtitle = 'Normal scale')
